@using ANGEL.Models
@model IEnumerable<ANGEL.Models.Item>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Store";
}
<style>
    * {
        text-decoration: none !important;
        color: #2A2F4F

    }
</style>





<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/HomePageStyle/css/style.css">
    <link rel="stylesheet" href="~/HomePageStyle/css/responsive.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
</head>
<!-- body -->
<body class="main-layout">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/HomePageStyle/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <header>
        <!-- header inner -->
        <div class="header">
            <div class="header_full_bg">
                <div class="banner">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="banner_text">
                                    <h1>ِAisha<br> Islamic Wear</h1>
                                    <a class="get_btn" href="#about" role="button">Shopping now</a>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <img class="bann_img" src="~/HomePageStyle/images/tunic-2680ayd574-burgundy-ar-739938-13-O-ezgif.com-webp-to-jpg-converter-removebg-preview.png" alt="#" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </header>

    <div id="protien" class="protien_main">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="protien">
                            <figure><img src="~/itemImages/@item.ItemImage" alt="@item.ItemName" /></figure>
                            <h3>@item.ItemName</h3>
                            <span> @item.category.CategoryName  </span>
                            <a asp-action="Details" asp-route-id="@item.ItemId" class="read_more mar_top" > Buy Now</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- end our protien  -->
    <!-- about -->
    <div id="about" class="about">
        <div class="container-fluid">
            <div class="row d_flex">
                <div class="col-md-6">
                    <div class="titlepage">
                        <h2>About Us</h2>
                        <p>We provide high-quality Islamic clothing that combines tradition with modern style. Our designs focus on modesty, comfort, and elegance, crafted from premium fabrics to suit contemporary needs. Celebrate your faith confidently with our collection, where modesty meets sophistication. Explore timeless styles that honor Islamic values.</p>
                    </div>
                </div>
                <div class="col-md-6 pad_right0">
                    <div class="about_img ">
                        <figure><img src="~/HomePageStyle/images/about.jpg" alt="#" /></figure>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end about -->
    <!-- growyhing -->
    <div class="growyhing">
        <div class="container">
            <div class="row d_flex">
                <div class="col-md-6">
                    <div class="body_img">
                        <figure><img src="~/HomePageStyle/images/Untitled design.png" align="#" /></figure>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="titlepage">
                        <h2>Elevating Your Style with Modesty</h2>
                        <a class="read_more" href="Javascript:void(0)"> Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
